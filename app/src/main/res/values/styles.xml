<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splash_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/splash_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/lobster_two</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_text">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="chapter_item_name">
        <item name="android:textSize">@dimen/chapter_name_text_size</item>
        <item name="android:fontFamily">@font/lobster_two</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chapter_item_data">
        <item name="android:textSize">@dimen/chapter_data_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="label">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>

    <style name="input">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:drawablePadding">@dimen/input_padding</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:minHeight">@dimen/input_min_height</item>
    </style>

    <style name="main_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/lobster_two</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>